{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
    
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
    
        "module": "ESNext",
        "moduleResolution": "Bundler",
    
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
    
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
  